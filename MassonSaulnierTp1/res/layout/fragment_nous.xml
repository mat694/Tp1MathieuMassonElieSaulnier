<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.massonsaulniertp1.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStm"
        android:layout_marginTop="18dp"
        android:text="@string/description" />

    <Button
        android:id="@+id/btnGoStm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="@string/btnGo" />

    <TextView
        android:id="@+id/textViewAllerStm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGoStm"
        android:layout_marginBottom="16dp"
        android:text="@string/siteStm"
        android:textColor="#4FA9E6"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDescription"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="@string/La_societe"
        android:textColor="#4FA9E6"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:textStyle="bold" />
		
</RelativeLayout>
